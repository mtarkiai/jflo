#!/usr/bin/env node
'use strict'

var domain      = require('domain');
var jflo        = module.exports
                = require('../lib/jflo');

if (!module.parent) {
    domain.create()
        .on('error', function (err) {
            console.error("" + err);
            setTimeout(process.exit);
        })
        .run(function () {
            process.title = 'jflo';
            require('../lib/runner').run(jflo);
        });
}
else {
    require('../lib/runner').initialize(jflo);
    module.exports = jflo;
}
